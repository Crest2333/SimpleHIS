<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-header"><label>就诊</label></div>
            <div class="card-body">
                <div class="row ">
                    <input type="hidden" value="@ViewBag.AppointmentId" id="appointmentId" />
                    <div class="col-lg-12">
