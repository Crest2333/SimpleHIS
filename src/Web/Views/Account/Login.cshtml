
@{
    ViewData["Title"] = "登录";
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}
<div class="main-wrapper">
    <div class="page-wrapper full-page">
        <div class="page-content d-flex align-items-center justify-content-center">

            <div class="row w-100 mx-0 auth-page">
                <div class="col-md-8 col-xl-6 mx-auto">
                    <div class="card">
                        <div class="row">
                            <div class="col-md-4 pr-md-0">
                                <div class="auth-left-wrapper">

                                </div>
                            </div>
                            <div class="col-md-8 pl-md-0">
                                <div class="auth-form-wrapper px-4 py-5">
                                    <a href="#" class="noble-ui-logo d-block mb-2">康仁医院信息管理系统</a>
                                    <h5 class="text-muted font-weight-normal mb-4">欢迎回来！登录你的账号</h5>
                                    <form class="forms-sample" asp-action="Login">
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">工号</label>
                                            <input type="text" class="form-control" name="AccountNo" id="workNo" placeholder="工号">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputPassword1">密码</label>
                                            <input type="password" class="form-control" name="PassWord" id="passWord" autocomplete="current-password" placeholder="密码">
                                        </div>
                                        <div class="form-group">
                                            <span style="color:red">
                                                @ViewBag.Error
                                            </span>
                                        </div>
                                        <div class="mt-3">
                                            <button type="submit" class="btn btn-primary mr-2 mb-2 mb-md-0" onclick="">登录</button>
                                        </div>
                                        <a href="register.html" class="d-block mt-3 text-muted">忘记密码</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


@section Scripts{
    <script src="~/static/Account/Authentication.js"></script>
}
