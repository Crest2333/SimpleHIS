
@{
    ViewData["Title"] = "DoctorList";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

<div class="row justify-content-center col-12">
    <div class="card col-2" style="margin-right: 10px;padding-top: 20px">
        <form class="forms-sample">
            <div class="form-group">
                <label for="exampleInputEmail1">搜索：</label>
                <input type="text" name="searchValue" id="searchValue" value="" class="form-control" />
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">筛选：</label>
                <select type="text" name="department" id="department" class="form-control" ></select>
            </div>

            <div class="mt-3">
                <div type="submit" class="btn btn-primary mr-2 mb-2 mb-md-0 form-control" onclick="Search(1)">搜索</div>
            </div>

        </form>

    </div>
    <div class="card col-7 " id="doctorInfoList">
        <div class="card-header">
            <h3>医生信息</h3>
        </div>
    </div>
</div>

<script type="text/html" id="listHtml">
    <div class="card-header">
        <h3>医生信息</h3>
    </div>
    {{each list value index}}
    <div class="card-body">
        <div class="col-12 row">
            <div class="col-3 justify-content-center">
                <div>
                    <img src="{{value.imgUrl}}" alt="Alternate Text" />
                </div>
            </div>
            <div class="col-9">
                <div class="col-12 row">

                    <div class="col-sm-6 col-md-6 col-lg-6 row form-group">
                        <label class="col-form-label col-4 text-right">
                            姓名：
                        </label>
                        <div class="col-8">
                            <label class="col-form-label">
                                {{value.name}}
                            </label>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-6 row form-group">
                        <label class="col-form-label col-4 text-right">
                            科室：
                        </label>
                        <div class="col-8">
                            <label class="col-form-label">
                                {{each value.departmentList item Index }}
                                {{item}};
                                {{/each}}
                            </label>
                        </div>
                    </div>

                </div>
                <div class="col-12 row form-group">
                    <label class="col-form-label col-2 text-left">
                        医生简介：
                    </label>
                    <div class="col-9">
                        <div class="col-form-label" style="word-wrap: break-word ">
                            {{value.introduce}}
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary" onclick="GoToAddAppointment('{{value.id}}')">预约</button>
            </div>

        </div>

    </div>

    {{/each }}
</script>
<script type="text/html" id="departmnHtml">
    {{each list value index}}
    <option value="{{value.id}}">{{value.name}}</option>

    {{/each}}
</script>
@section Scripts
{
    <script src="~/static/PatientUser/DoctorList.js"></script>
}