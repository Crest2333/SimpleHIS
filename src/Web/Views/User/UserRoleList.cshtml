
@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-xl-3 row ">
                        <label class="col-sm-3 col-form-label" style="text-align:right">姓名</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="getName" name="getName" value="" />
                        </div>
                    </div>

                    <div class="col-xl-3 row ">
                        <label class="col-sm-3 col-form-label" style="text-align:right">工号</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="getUserNo" name="getUserNo" value="" />
                        </div>
                    </div>
                    <input type="hidden" value="true" id="isUserRole"/>
                    
                    <div class="col-xl-3 row ">
                        <label class="col-sm-3 col-form-label" style="text-align:right">角色</label>
                        <div class="col-sm-9">
                            <select id="roleDiv" class="form-control">
                                <option value="-1" selected="selected">请选择</option>
                                <option value="1">男</option>
                                <option value="2">女</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-xl-3 row ">
                        <button class="btn btn-google" onclick="GetList(1)">搜索</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="listTable" class="table">
                        <thead>
                            <tr>
                                <th>账号</th>
                                <th>姓名</th>
                                <th>角色</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody id="listBody">
                        </tbody>
                    </table>

                </div>

            </div>

        </div>

    </div>
    <div class="col-12 d-flex justify-content-between">
        <div>
           
        </div>
        <div id="page">

        </div>
    </div>

</div>
<script id="listHtml" type="text/html">
    {{each list value index}}
    <tr>
        <td>{{value.userAccount}}</td>
        <td>{{value.userName}}</td>
        <td>{{value.roleName}}</td>
        <td>          
            <button class="btn btn-primary" onclick="DeleteRole('{{value.id}}')">移除</button>
        </td>
    </tr>

    {{/each}}
</script>

<script id="roleHtml" type="text/html">
    {{each result value index}}
    <option value="{{value.roleId}}">{{value.name}}</option>

    {{/each}}
</script>

@section Scripts{
    <script src="~/static/User/List.js"></script>
    <script type="text/javascript">
    </script>
}